<div class="card text-white bg-secondary">
  <div class="card-header">
      <h4>{{user.name}}</h4><span> - {{format_date date_created}}</span>
    </div>
    <div class="card-body">
      <h5 class="card-title">{{title}} - </h5>
      <p>{{content}}</p> 
    </div>
  </div>

</div>



<div class="row mt-4 justify-content-center">
  <div class="col-8 post-list">
    <h3 id="comment-header">Comments:</h3>
<br>
    {{#each comments as |comment|}}
    <div>
   <div class="card text-white bg-secondary" >
  <h4 class="card-header"> {{comment.user.name}}</h4>
  <div class="card-body ">
    <p class="card-text card-body">{{comment.text}}</p> 
  </div>
  <div class="card-body ">
    <p class="card-header">  {{format_date comment.created_at}}</p>
  </div>
  <div class="col-12 text-center">
        <button class="btn btn-danger post-link " id="deleteBtn" data-id="{{comment.id}}">DELETE</button>
      </div>
</div>
  <br>
  <br>
    {{/each}}
  </div>
  <br>


  {{#if logged_in}}
  <div class="col-6 comment-form">
    <h3 class="card-title" id="comment-form-title">leave a comment:</h3>
    <form class="form new-post-form">
      <div class="row"><div class="col-12">
        <div class="form-group">
          <textarea class="form-control" id="comment" name="comment" placeholder="comment:"></textarea>
        </div></div>
      </div>
      <br>
      <div class="form-group">
        <button type="submit" class="btn btn-primary" id="postBtn" >post</button>
      </div>
    </form>
  </div>
  <br>
  {{/if}}

  {{#if logged_in}}
  <script src="/js/comment.js"></script>
  {{/if}}

</div>